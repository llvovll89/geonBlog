<!DOCTYPE html>
<html lang="ko">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>

<body>
    <div id="wrap">
        <div class="container">
            <h1 class="title">Blog 기사</h1>
            <a href="/articles/new" class="btn btn-success">New File</a>

            <% articles.forEach(article => { %>
            <div class="box">
                <div class="box-body">
                    <div class="box-title"><%= article.title %></div>
                    <div class="box-subtitle">
                        <%= article.createdAt.toLocaleDateString() %>
                    </div>
                    <div class="box-text">
                        <%= article.description %>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>



    <script type="text/js" src="/js/app.js"></script>
</body>

</html>