<div class="form-body">
    <label for="title">Title</label>
    <input type="text" value="<%= article.title %>" required id="input-title" class="form-title">
</div>

<div class="form-body">
    <label for="title">Description</label>
    <textarea name="description" id="description" class="fomr-desc">
        <%= article.description %>
    </textarea>
</div>

<div class="form-body">
    <label for="title">MarkDown</label>
    <textarea required name="markdown" id="markdown" class="fomr-mark">
        <%= article.markdown %>
    </textarea>
</div>

<a href="/" class="btn btn-cancel">Cancel</a>
<button type="submit" class="btn btn-success">Save</button>